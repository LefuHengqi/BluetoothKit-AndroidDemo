<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App" />

    <style name="App.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AppDialogAnimation</item>
    </style>

    <style name="App.Dialog.1">
        <item name="android:windowAnimationStyle">@style/AppDialogAnimation1</item>
    </style>

    <style name="App.Dialog.2">
        <item name="android:windowAnimationStyle">@style/AppDialogAnimation2</item>
    </style>

    <style name="AppDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/app_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/app_slide_out_to_bottom</item>
    </style>

    <style name="AppDialogAnimation1">
        <item name="android:windowEnterAnimation">@anim/app_slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/app_slide_out_to_top</item>
    </style>

    <style name="AppDialogAnimation2">
        <item name="android:windowEnterAnimation">@anim/app_slide_in_scale</item>
        <item name="android:windowExitAnimation">@anim/app_slide_out_scale</item>
    </style>

</resources>