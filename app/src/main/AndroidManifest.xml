<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lefu.ppscale.ble">

    <application
        android:name=".PPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BleConfigWifiActivity"></activity>
        <activity android:name=".activity.BindingDeviceActivity" />
        <activity android:name=".activity.DeviceListActivity" />
        <activity android:name=".activity.BodyDataDetailActivity" />
        <activity android:name=".activity.BMDJConnectActivity" />
        <activity android:name=".activity.BMDJTimeActivity" />
        <activity android:name=".activity.BMDJIntroduceActivity" />
        <activity android:name=".activity.ScanDeviceListActivity" />
        <activity android:name=".activity.ReadHistoryListActivity" />
        <activity android:name="TestBleActivity" />
    </application>

</manifest>