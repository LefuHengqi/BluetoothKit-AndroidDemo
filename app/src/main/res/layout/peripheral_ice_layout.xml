<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimens_10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/device_set_connect_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/connect_state"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/functinonTypeTvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_weight" />

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="0.0" />

        <TextView
            android:id="@+id/weightMeasureState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_30dp"
            android:text="state" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="0.6"
        android:background="#11000000"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollViewLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TextView
                android:id="@+id/logTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp" />

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/startConnectDevice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/connect_device" />

                <Button
                    android:id="@+id/syncTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sync_time"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/readDeviceInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/device_info"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/syncUnit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/change_unit"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/syncUserHistoryData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/history_data"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/deleteHistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/clear_history"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/startConfigWifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/start_config_net"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/getWifiInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/get_wifi_info"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/readDeviceBattery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/read_device_battery"
                    android:textAllCaps="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/device_set_sync_log"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/sync_log"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/device_set_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/reset"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/startKeepAlive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/start_keep_alive"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/setUserInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/set_user_info"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/setNetHost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置域名"
                    android:textAllCaps="false" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/device_ota_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTA:" />

                <Button
                    android:id="@+id/device_set_startLocalOTA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start_local_ota" />

                <Button
                    android:id="@+id/device_set_startOTA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/start_user_ota" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_dfu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DFU:" />

                    <Button
                        android:id="@+id/device_set_getFilePath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="选则DFU文件" />

                    <Button
                        android:id="@+id/device_set_startDFU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/start_dfu"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_full_upgrade" />

                    <ToggleButton
                        android:id="@+id/whetherFullyDFUToggleBtn"
                        android:layout_width="@dimen/size_dp58"
                        android:layout_height="@dimen/size_dp30"
                        android:background="@drawable/tone_switch_selector"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/mCurrentHostUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前的域名"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/text_sp16"
                android:layout_marginTop="@dimen/dimens_12dp"
                android:layout_marginStart="@dimen/dimens_4dp" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>