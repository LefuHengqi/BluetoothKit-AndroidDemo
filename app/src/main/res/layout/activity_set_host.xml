<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device.SetHostActivity">

    <TextView
        android:id="@+id/mTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:text="@string/please_input_your_domain"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_sp16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEnterHostEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/text_sp16"
        app:layout_constraintTop_toBottomOf="@id/mTitle" />

    <Button
        android:id="@+id/mEnterHostBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_16dp"
        android:text="@string/confirm"
        app:layout_constraintTop_toBottomOf="@id/mEnterHostEdit" />
</androidx.constraintlayout.widget.ConstraintLayout>