<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
        android:drawablePadding="5sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Scale" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5dp"
            android:text="08:00:00:08:00:00" />

        <TextView
            android:id="@+id/device_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_6dp"
            android:text="@string/to_config_the_network" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimens_20dp"
        android:paddingEnd="@dimen/dimens_20dp"
        android:text="@string/setting" />


</LinearLayout>