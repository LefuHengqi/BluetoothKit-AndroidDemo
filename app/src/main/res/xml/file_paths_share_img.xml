<resources>
    <paths>

        <external-path
            name="camera_photos"
            path="" />

        <paths>
            <external-path
                name="files_root"
                path="Android/data/com.alpha.alphaapp/" />
            <external-path
                name="external_storage_root"
                path="." />
        </paths>

        <paths>
            <external-path name="my_images" path="Pictures" />
            <external-files-path name="images" path="Pictures" />
            <root-path path="." name="root_path" />
        </paths>

        <external-path
            name="images"
            path="." />

        <root-path
            name="root"
            path="/" />

        <files-path
            name="root"
            path="." />

        <files-path
            name="files"
            path="." />

        <cache-path
            name="cache"
            path="." />

        <!-- 物理路径为Context.getFilesDir() + /files/* -->
        <files-path
            name="files"
            path="files" />
        <!-- 物理路径为Context.getCacheDir() + /files/* -->
        <cache-path
            name="cache"
            path="files" />
        <!-- 物理路径为Environment.getExternalStorageDirectory() + /files/* -->
        <external-path
            name="external"
            path="files" />
        <!-- 物理路径为Context.getExternalFilesDir(String) + /files/* -->
        <external-files-path
            name="externalfiles"
            path="files" />
        <!-- 物理路径为Context.getExternalCacheDir() + /files/* -->
        <external-cache-path
            name="externalcache"
            path="files" />
        <!-- 物理路径为`Context.getExternalMediaDirs() + /files/*, 要求API21+ -->
        <external-media-path
            name="externalmedia"
            path="files" />
    </paths>
</resources>
